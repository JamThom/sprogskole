datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Translation {
  id        Int      @id @default(autoincrement())
  classroom     Classroom @relation(fields: [id], references: [id])
  original  String
  translated String
  answers   Answer[]
}

model Answer {
  id        Int      @id @default(autoincrement())
  profile   Profile  @relation(fields: [id], references: [id], map: "Answer_profileId_fkey")
  translation Translation @relation(fields: [id], references: [id], map: "Answer_translationId_fkey")
  value     String
  date      DateTime
  isCorrect Boolean
}

model Profile {
  id      Int      @id @default(autoincrement())
  name    String
  answers Answer[]
}

model Classroom {
  id      Int      @id @default(autoincrement())
  name    String
  translations Translation[]
}